# BestCure ERP - Environment Variables
# Copy this file to .env and fill in your values

# MongoDB connection string (MongoDB Atlas recommended for production)
MONGO_URI=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/bestcure_erp?retryWrites=true&w=majority

# Server port
PORT=5001

# JWT secret for authentication (use a long random string in production)
JWT_SECRET=your-secret-key-here

# Node environment (set to "production" when deploying)
NODE_ENV=development
